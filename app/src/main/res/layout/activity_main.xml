<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/abuabu2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clBackgroundProgresss"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp">

            <RelativeLayout
                android:id="@+id/rlp1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintTop_toTopOf="@id/clBackgroundProgresss"
                app:layout_constraintStart_toStartOf="@id/clBackgroundProgresss">

                <ProgressBar
                    android:id="@+id/progress1"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:alpha="0.5"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/custom_progress"
                    android:layout_centerVertical="true"/>

                <FrameLayout
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_circle_white"
                    android:layout_alignParentRight="true">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottieprogress1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:lottie_fileName="statusprogress.json"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:layout_gravity="center"
                        android:visibility="gone"/>

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottieprogressdone1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:lottie_autoPlay="false"
                        app:lottie_loop="false"
                        app:lottie_fileName="statusprogressdone.json"
                        android:layout_gravity="center"
                        android:visibility="gone"/>

                </FrameLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlp2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintStart_toEndOf="@id/rlp1"
                app:layout_constraintTop_toTopOf="@id/clBackgroundProgresss">

                <ProgressBar
                    android:id="@+id/progress2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:alpha="0.5"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/custom_progress"
                    android:layout_centerVertical="true"/>

                <FrameLayout
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_circle_white"
                    android:paddingStart="-10dp"
                    android:layout_alignParentRight="true">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottieprogress2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:lottie_fileName="statusprogress.json"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:layout_gravity="center"
                        android:visibility="gone"/>

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottieprogressdone2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:lottie_fileName="statusprogressdone.json"
                        android:layout_gravity="center"
                        android:visibility="gone"/>

                </FrameLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlp3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintStart_toEndOf="@id/rlp2"
                app:layout_constraintTop_toTopOf="@id/clBackgroundProgresss">

                <ProgressBar
                    android:id="@+id/progress3"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:alpha="0.5"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/custom_progress"
                    android:layout_centerVertical="true"/>

                <FrameLayout
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_circle_white"
                    android:paddingStart="-10dp"
                    android:layout_alignParentRight="true">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottieprogress3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:lottie_fileName="statusprogress.json"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:layout_gravity="center"
                        android:visibility="gone"/>

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottieprogressdone3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:lottie_fileName="statusprogressdone.json"
                        android:layout_gravity="center"
                        android:visibility="gone"/>

                </FrameLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                app:layout_constraintWidth_percent="0.15"
                app:layout_constraintStart_toEndOf="@id/rlp3"
                app:layout_constraintTop_toTopOf="@id/clBackgroundProgresss">

                <ProgressBar
                    android:id="@+id/progress4"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:alpha="0.5"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/custom_progress"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Percarian\nBarang"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginEnd="-10dp"
                app:layout_constraintTop_toBottomOf="@id/rlp1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/rlp1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="12sp"
                android:layout_marginEnd="-5dp"
                app:layout_constraintTop_toBottomOf="@id/rlp2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/rlp2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto\nLorong"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="12sp"
                android:layout_marginEnd="-5dp"
                app:layout_constraintTop_toBottomOf="@id/rlp3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/rlp3"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>